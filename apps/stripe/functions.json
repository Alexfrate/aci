[
  {
    "name": "STRIPE__CREATE_PAYMENT_INTENT",
    "description": "Create a PaymentIntent object to begin the process of collecting a payment from your customer.",
    "tags": [
      "stripe",
      "payments",
      "payment-intents"
    ],
    "visibility": "public",
    "active": true,
    "protocol": "rest",
    "protocol_data": {
      "method": "POST",
      "path": "/v1/payment_intents",
      "server_url": "https://api.stripe.com"
    },
    "parameters": {
      "type": "object",
      "properties": {
        "header": {
          "type": "object",
          "description": "Headers for the HTTP request",
          "properties": {
            "Content-Type": {
              "type": "string",
              "description": "Content type of the request",
              "default": "application/json; charset=utf-8"
            }
          },
          "required": [
            "Content-Type"
          ],
          "visible": [],
          "additionalProperties": false
        },
        "body": {
          "type": "object",
          "description": "Request body parameters",
          "properties": {
            "amount": {
              "type": "integer",
              "description": "Amount intended to be collected (in smallest currency unit)"
            },
            "currency": {
              "type": "string",
              "description": "Three-letter ISO currency code",
              "pattern": "^[a-z]{3}$"
            },
            "payment_method_types": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "card",
                  "card_present",
                  "alipay",
                  "au_becs_debit",
                  "bacs_debit",
                  "bancontact",
                  "eps",
                  "fpx",
                  "giropay",
                  "grabpay",
                  "ideal",
                  "klarna",
                  "oxxo",
                  "p24",
                  "sepa_debit",
                  "sofort",
                  "wechat_pay"
                ]
              },
              "description": "Payment method types allowed"
            },
            "capture_method": {
              "type": "string",
              "enum": [
                "automatic",
                "manual"
              ],
              "description": "When to capture funds",
              "default": "automatic"
            },
            "confirm": {
              "type": "boolean",
              "description": "Whether to immediately confirm the PaymentIntent",
              "default": false
            },
            "customer": {
              "type": "string",
              "description": "ID of the Customer this PaymentIntent belongs to"
            },
            "description": {
              "type": "string",
              "description": "Description of the PaymentIntent"
            },
            "metadata": {
              "type": "object",
              "description": "Set of key-value pairs for storing additional data",
              "properties": {},
              "required": [],
              "visible": [],
              "additionalProperties": {
                "type": "string"
              }
            },
            "receipt_email": {
              "type": "string",
              "description": "Email address to send receipt to",
              "format": "email"
            },
            "setup_future_usage": {
              "type": "string",
              "enum": [
                "on_session",
                "off_session"
              ],
              "description": "Indicates how to use the payment method in future"
            },
            "shipping": {
              "type": "object",
              "description": "Shipping information for the order",
              "properties": {
                "address": {
                  "type": "object",
                  "properties": {
                    "line1": {
                      "type": "string"
                    },
                    "line2": {
                      "type": "string"
                    },
                    "city": {
                      "type": "string"
                    },
                    "country": {
                      "type": "string"
                    },
                    "postal_code": {
                      "type": "string"
                    },
                    "state": {
                      "type": "string"
                    }
                  },
                  "required": [],
                  "visible": [],
                  "additionalProperties": false
                },
                "name": {
                  "type": "string"
                },
                "carrier": {
                  "type": "string"
                },
                "phone": {
                  "type": "string"
                },
                "tracking_number": {
                  "type": "string"
                }
              },
              "required": [],
              "visible": [],
              "additionalProperties": false
            },
            "statement_descriptor": {
              "type": "string",
              "description": "Statement descriptor for card charges",
              "maxLength": 22
            },
            "statement_descriptor_suffix": {
              "type": "string",
              "description": "Suffix for dynamic statement descriptors",
              "maxLength": 22
            },
            "transfer_data": {
              "type": "object",
              "properties": {
                "amount": {
                  "type": "integer"
                },
                "destination": {
                  "type": "string"
                }
              },
              "required": [
                "amount"
              ],
              "visible": [
                "amount"
              ],
              "additionalProperties": false
            },
            "application_fee_amount": {
              "type": "integer",
              "description": "Application fee amount (in smallest currency unit)"
            },
            "on_behalf_of": {
              "type": "string",
              "description": "Stripe account ID for which the payment is being made"
            }
          },
          "required": [
            "amount",
            "currency"
          ],
          "visible": [
            "amount",
            "currency",
            "payment_method_types",
            "customer",
            "description",
            "receipt_email"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "body",
        "header"
      ],
      "visible": [
        "body"
      ],
      "additionalProperties": false
    }
  }
]